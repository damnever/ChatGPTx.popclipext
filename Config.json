{
  "name": "ChatGPTx",
  "icon": "iconify:ri:openai-fill",
  "icon options": {
    "preserve color": false
  },
  "identifier": "com.damnever.popclipext.ChatGPTx",
  "description": "PopClip extension for revising, polishing, and translating texts, as well as performing arbitrary operations with the assistance of ChatGPT. The extension can either paste the result directly into the active application or copy and preview(with possible truncation) the result.",
  "popclip version": 4096,
  "javascript file": "main.js",
  "options": [
    {
      "identifier": "apiType",
      "label": "API Type",
      "type": "multiple",
      "description": "The type of API or services being used.",
      "default value": "openai",
      "values": [
        "openai",
        "azure"
      ]
    },
    {
      "identifier": "apiBase",
      "label": "API Base",
      "type": "string",
      "description": "The base URL for chat completions API(/chat/completions).(Azure: https://{your-resource-name}.openai.azure.com/openai/deployments/{deployment-id})",
      "default value": "https://api.openai.com/v1"
    },
    {
      "identifier": "apiKey",
      "label": "API Key",
      "type": "string",
      "description": "The API Key for authentication.",
    },
    {
      "identifier": "apiVersion",
      "label": "API Version (Azure)",
      "type": "string",
      "description": "The API version to use, which follows the YYYY-MM-DD format. Azure only.",
      "default value": "2023-07-01-preview"
    },
    {
      "identifier": "model",
      "label": "Model",
      "type": "string",
      "description": "The model to use with the chat completions API(/chat/completions), required by openai.",
      "default value": "gpt-3.5-turbo"
    },
    {
      "identifier": "opinionedActions",
      "label": "❤ OPINIONED ACTIONS",
      "type": "heading",
      "description": "The primary language is used by default, click with shift(⇧) to use the secondary language.",
    },
    {
      "identifier": "revise",
      "label": "Revise Texts with Reasons",
      "type": "heading"
    },
    {
      "identifier": "reviseEnabled",
      "label": "Enable",
      "type": "boolean",
      "inset": true
    },
    {
      "identifier": "revisePrimaryLanguage",
      "label": "Primary Lang",
      "type": "string",
      "default value": "English",
      "inset": true
    },
    {
      "identifier": "reviseSecondaryLanguage",
      "label": "Secondary Lang",
      "type": "string",
      "default value": "Chinese",
      "inset": true
    },
    {
      "identifier": "polish",
      "label": "Polish Texts",
      "type": "heading"
    },
    {
      "identifier": "polishEnabled",
      "label": "Enable",
      "type": "boolean",
      "inset": true
    },
    {
      "identifier": "polishPrimaryLanguage",
      "label": "Primary Lang",
      "type": "string",
      "default value": "English",
      "inset": true
    },
    {
      "identifier": "polishSecondaryLanguage",
      "label": "Secondary Lang",
      "type": "string",
      "default value": "Chinese",
      "inset": true
    },
    {
      "identifier": "translate",
      "label": "Translate Texts",
      "type": "heading",
    },
    {
      "identifier": "translateEnabled",
      "label": "Enable",
      "type": "boolean",
      "inset": true
    },
    {
      "identifier": "translatePrimaryLanguage",
      "label": "Primary Lang",
      "type": "string",
      "default value": "Chinese",
      "inset": true
    },
    {
      "identifier": "translateSecondaryLanguage",
      "label": "Secondary Lang",
      "type": "string",
      "default value": "English",
      "inset": true
    }
  ],
  "entitlements": [
    "network"
  ],
}
